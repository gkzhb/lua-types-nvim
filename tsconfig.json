{
    "compilerOptions": {
      "strict": true,
      "allowJs": true,
      "target": "esnext",
      "lib": ["esnext", "ES2021", "DOM"],
      "module": "CommonJS",
      "moduleResolution": "node",
      "types": ["node"],
      "outDir": "dist",
      "baseUrl": "./src",
      "rootDir": "./src",
      "paths": {
        "@/*": ["src/*"]
      }
    },
    "include": [
      "src/**/*.ts"
    ]
}
